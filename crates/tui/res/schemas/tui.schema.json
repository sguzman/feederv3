{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "feedrv3 tui config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "server",
    "auth",
    "ui",
    "keybindings"
  ],
  "properties": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url", "timeout_ms"],
      "properties": {
        "url": {
          "type": "string"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 100
        }
      }
    },
    "auth": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "auto_login",
        "username",
        "password"
      ],
      "properties": {
        "auto_login": {
          "type": "boolean"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "entries_page_size",
        "feeds_page_size",
        "favorites_page_size",
        "folders_page_size",
        "subscriptions_page_size",
        "refresh_interval_ms"
      ],
      "properties": {
        "entries_page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "feeds_page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "favorites_page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "folders_page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "subscriptions_page_size": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "refresh_interval_ms": {
          "type": "integer",
          "minimum": 50
        }
      }
    },
    "keybindings": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "quit",
        "refresh",
        "next_tab",
        "prev_tab",
        "tab_feeds",
        "tab_entries",
        "tab_favorites",
        "tab_folders",
        "tab_subscriptions",
        "move_down",
        "move_up",
        "go_top",
        "go_middle",
        "go_bottom",
        "open_category_menu",
        "open_tag_menu",
        "open_sort_menu",
        "clear_filters",
        "open_entries",
        "toggle_read",
        "toggle_subscribe",
        "entries_next",
        "entries_prev",
        "feeds_next",
        "feeds_prev"
      ],
      "properties": {
        "quit": {
          "type": "string"
        },
        "refresh": {
          "type": "string"
        },
        "next_tab": {
          "type": "string"
        },
        "prev_tab": {
          "type": "string"
        },
        "tab_feeds": {
          "type": "string"
        },
        "tab_entries": {
          "type": "string"
        },
        "tab_favorites": {
          "type": "string"
        },
        "tab_folders": {
          "type": "string"
        },
        "tab_subscriptions": {
          "type": "string"
        },
        "move_down": {
          "type": "string"
        },
        "move_up": {
          "type": "string"
        },
        "go_top": {
          "type": "string"
        },
        "go_middle": {
          "type": "string"
        },
        "go_bottom": {
          "type": "string"
        },
        "open_category_menu": {
          "type": "string"
        },
        "open_tag_menu": {
          "type": "string"
        },
        "open_sort_menu": {
          "type": "string"
        },
        "clear_filters": {
          "type": "string"
        },
        "open_entries": {
          "type": "string"
        },
        "toggle_read": {
          "type": "string"
        },
        "toggle_subscribe": {
          "type": "string"
        },
        "entries_next": {
          "type": "string"
        },
        "entries_prev": {
          "type": "string"
        },
        "feeds_next": {
          "type": "string"
        },
        "feeds_prev": {
          "type": "string"
        }
      }
    }
  }
}
